              </ul>
            </div><!--/.nav-collapse -->
          </div>
        </div>
      </div>

      <div class="col-sm-9 board">
        <h2>Edit instructor_name profile</h2>
        <form class="border">
          <div class="form-group">
            <label for="firstname">Firstname</label>
            <input class="form-control" id="firstname" placeholder="Old_firstname">
          </div>
          <div class="form-group">
            <label for="lastname">Lastname</label>
            <input class="form-control" id="lastname" placeholder="old_lastname">
          </div>
          <div class="form-group">
            <label for="username">Username (email)</label>
            <input class="form-control" id="username" placeholder="old_username">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input class="form-control" id="password" placeholder="old_password">
          </div>
          <div class="form-group">
            <label for="teacherid">Teacher ID</label>
            <input class="form-control" id="teacherid" placeholder="old_teacher_id">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>

      </div>
    </div>

  </div>
</div>

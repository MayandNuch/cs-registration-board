<div class="" style="margin-top:90px">
  <div class="container custom_container">
    <div class="row">
      <div class="col-sm-3 vertical_nav">
        <div class="sidebar-nav">
          <div class="navbar navbar-default" role="navigation">

            <div class="navbar-collapse collapse sidebar-navbar-collapse">
              <ul class="nav navbar-nav">
                <li><%= link_to "Profile", admin_path, method: :get%></li>
                <li><%= link_to "Manage courses", admin_manage_courses_path%></li>
                <li class="active"><%= link_to "Manage instructors", admin_manage_instructors_path%></li>

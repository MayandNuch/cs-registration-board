<% @courses.each do |course| %>
  <div class="services">
    <div class="col-md-4">
        <figure class="snip1174 navy col-md-4" style="height:440px; width:440px;">
          <img src="/assets/ruby.jpg">
          <figcaption>
            <h2>Course: <%= course.coursename%></h2>
            <p>
              instructor: <%= course.instructor%>
              <br>
              registered: <%= course.students.count%>
            </p>
            <%= link_to "More info", course %>
          </figcaption>
        </figure>
    </div>
  </div>
<% end %>

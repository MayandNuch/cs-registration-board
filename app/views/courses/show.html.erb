<%= @course.coursename %>
<%= @course.instructor %>
<% if student_signed_in? %>
  <%= link_to "Reserved the seat", add_student_course_path(@course), :method => :put %>
<% end %>
<div class="col-md-8">
    <% if @course.students.any? %>
      <h3>Courses (<%= @course.students.count %>)</h3>
      <table class="table">
          <thead>
            <tr>
              <th>firstname</th>
              <th>lastname</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody>
            <% @course.students.each do |student| %>
            <tr>
              <td><%= student.firstname%></td>
              <td><%= student.lastname%></td>
              <td><%= student.email%></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    <% end %>
</div>

<div class="services">
      <div class="col-md-4">
          <figure class="snip1174 navy col-md-4" style="height:440px; width:440px;">
            <img src="/assets/images/ruby.jpg">
            <figcaption>
              <h2>Course' Name</h2>
              <p>
                Description
              </p>
              <a href="course_info.html">More info</a>
            </figcaption>
          </figure>
      </div>
    </div>

<div class="container">
  <h1>Teacher's table</h1>
  <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% @teachers.each do |teacher| %>
        <tr>
          <td><%= teacher.firstname%></td>
          <td><%= link_to teacher.email, teacher %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>
